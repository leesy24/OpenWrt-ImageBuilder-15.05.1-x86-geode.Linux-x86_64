
config wifi-device 'radio0'
        option type 'mac80211'
        option hwmode '11g'
        option path 'pci0000:00/0000:00:0c.0'
        option country 'KR'
        option htmode 'HT40'
        option channel '1'

config wifi-iface
        option device 'radio0'
        option network 'lan'
        option mode 'ap'
        option ssid 'SR-001'
        option encryption 'none'
